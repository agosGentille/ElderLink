<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="8dp"
    android:elevation="4dp"
    android:layout_margin="8dp">


    <TextView
        android:id="@+id/textView_numero_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Pregunta N° x"
        android:textColor="#4CAF50"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_pregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Enunciado"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/radioGroup"
        android:layout_weight="1" >

        <RadioButton
            android:id="@+id/radioButton_correcta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:clickable="false"
            android:text="Opción correcta"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton_incorrecta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Incorrecta 1"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton_incorrecta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Incorrecta 2"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton_incorrecta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Incorrecta 3"
            android:textSize="16sp" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/btnModificarPregunta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:src="@drawable/ic_editar"
            android:contentDescription="Modificar"
            android:layout_gravity="end"/>
        <ImageButton
            android:id="@+id/btnEliminarPregunta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:src="@drawable/ic_eliminar"
            android:contentDescription="@string/btnEliminarPregunta"
            android:layout_gravity="end"/>
    </LinearLayout>

</LinearLayout>
