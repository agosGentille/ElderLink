<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="top|center_horizontal"
    android:background="#f5f5f5">

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/editText_elderLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="ElderLink"
        android:textSize="24sp"
        android:textColor="#6066cc"
        android:background="@null"
        android:focusable="false"
        android:cursorVisible="false" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su correo electrónico aquí"
        android:inputType="textEmailAddress"
        android:backgroundTint="#6066cc"
        android:textSize="18dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/editText_contrasenia"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Y su Contraseña aquí"
            android:inputType="textPassword"
            android:backgroundTint="#6066cc"
            android:textSize="18dp"
            android:layout_marginBottom="32dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#cccccc"/>



        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton_verContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:src="@drawable/ver_contra" />

            <ImageButton
                android:id="@+id/imageButton_ocultarContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:src="@drawable/invisible"
                android:visibility="invisible"/>
        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:backgroundTint="#6066cc"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btn_recuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Recuperar mi contraseña"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="#000000"/>


</LinearLayout>