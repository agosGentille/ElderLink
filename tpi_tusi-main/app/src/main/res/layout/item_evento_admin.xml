<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:padding="8dp"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/item_imagen"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/item_titulo"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Título del ítem"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_descripcion"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:text="Descripción del ítem"
            android:textColor="#757575"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttom_editar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:padding="6dp"
                android:src="@drawable/ic_editar" />

            <ImageView
                android:id="@+id/boton_eliminar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:padding="6dp"
                android:src="@drawable/ic_eliminar" />

            <ImageView
                android:id="@+id/buttom_ver"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:padding="6dp"
                android:src="@drawable/ic_ver" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
